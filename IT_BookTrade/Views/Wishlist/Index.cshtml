@model IEnumerable<IT_BookTrade.Models.WishlistItem>

@{
    ViewBag.Title = "Wishlist";
}

<h2>Wishlist</h2>

<br />

@if (Model == null || Model.Count() == 0)
{
    <hr />
    <h3>Your wishlist is empty.</h3>
}
else
{

    <table class="table table-hover">
        <thead>
            <tr>
                <th style="width: 50%">Book</th>
                <th style="width: 10%">Price</th>
                <th style="width: 20%" class="text-center">Wishlisted On</th>
                <th style="width: 20%"> </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {


            <tr>
                <td class="align-middle">
                    <div class="row">
                        <div class="col-sm-2 d-none d-sm-block">
                            <img src="@Url.Content(item.Book.ImagePath)" class="img-fluid">
                        </div>
                        <div class="col-sm-10 pl-5">
                            <h4 class="align-middle">@item.Book.Title</h4>
                        </div>
                    </div>
                </td>

                <td class="align-middle">
                    $ @item.Book.Price
                </td>
                <td class="align-middle text-center">
                    @item.DateAdded.ToShortDateString()
                </td>
                <td class="align-middle text-center">
                    <a class="btn btn-danger btn-sm" href="@Url.Action("RemoveFromWishlist", "Wishlist", new { id = item.WishlistItemId })"><i class="fa fa-trash-o"></i> Remove</a>
                </td>
            </tr>
            }
        </tbody>
        <tfoot>
        <td colspan="3"></td>
        <td>    
            <a class="btn btn-warning btn-block text-white" href="@Url.Action("Index", "Books")">Continue Shopping</a>
        </td>
        </tfoot>
    </table>
}


    