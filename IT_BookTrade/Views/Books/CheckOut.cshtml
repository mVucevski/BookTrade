    @{
        Layout = "~/Views/Shared/_Layout.cshtml";
    }


    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <form>
                    <div class="row my-3">
                        <div class="col-md-12">
                            <h1>Checkout</h1>
                            <hr>
                            <div class="progress" style="height: 20%;">
                                <div class="progress-bar progress-bar-striped" style="width: 100%">Payment</div>
                            </div>
                        </div>
                    </div>
                    <hr>

                    <div class="row">
                        <div class="col-md-12 form-group">
                            <label class="control-label"><strong>Payment Method</strong></label>
                            <select class="form-control" id="exampleFormControlSelect1" title="Choose one of the following...">
                                <option>VISA</option>
                                <option>Maestro</option>
                                <option>MasterCard</option>
                                <option>American Express</option>
                            </select>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 form-group">
                            <label class="control-label"><strong>Name on Card</strong></label>
                            <input type="text" class="form-control">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 form-group">
                            <label class="control-label"><strong>Card Number</strong></label>
                            <input type="text" class="form-control">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 form-group">
                            <label class="control-label"><strong>Billing Address</strong></label>
                            <input type="text" class="form-control">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <label class="control-label"><strong>CVC</strong></label>
                        </div>
                        <div class="col-md-4">
                            <label class="control-label"><strong>Expiration</strong></label>
                        </div>
                        <div class="col-md-4">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <input type="text" class="form-control" placeholder="ex. 311">
                        </div>
                        <div class="col-md-4">
                            <input type="text" class="form-control" placeholder="MM">
                        </div>
                        <div class="col-md-4">
                            <input type="text" class="form-control" placeholder="YYYY">
                        </div>
                    </div>

                    <div class='row mt-3'>
                        <div class='col-md-12'>
                            <div class='form-control btn btn-success'>
                                <p class="rounded boja">Total: $@Model</p>
                            </div>
                        </div>
                    </div>
                    <br>
                    <div class='row'>
                        <div class='col-md-12 form-group'>
                            <button class='form-control btn btn-primary submit-button' type='submit'>Pay</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-md-4"></div>
            <div class="col-md-4"></div>
        </div>
    </div>
