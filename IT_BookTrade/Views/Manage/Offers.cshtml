@model IEnumerable<IT_BookTrade.Models.Book>

@{
    ViewBag.Title = "Offers";
}

<h2>Offers</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookAuthor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImagePath)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rating)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tradeable)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ISBN)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BookAuthor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            <img height="100" src="@Url.Content(item.ImagePath)" />
        </td>
        <td>
            @if (item.Rating < 0)
            {
                <div>/</div>
                }
            else
            {
                @Html.DisplayFor(modelItem => item.Rating)
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @(item.Tradeable ? "Yes" : "No")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ISBN)
        </td>
        <td>
            <div>
                @Html.ActionLink("Edit", "Edit", "Books", new { id = item.ID }, new { @class = "btn btn-outline-secondary", @style = "font-size:10px;" }) 
            </div>
            <div>
                @Html.ActionLink("Details", "Details", "Books", new { id = item.ID }, new { @class = "btn btn-outline-secondary", @style = "font-size:10px;" })
            </div>
            <div>
                @Html.ActionLink("Delete", "Delete", "Books", new { id = item.ID }, new { @class = "btn btn-outline-secondary", @style = "font-size:10px;" })
            </div>
        </td>
    </tr>
}

</table>
