@model IEnumerable<IT_BookTrade.Models.InboxItem>
@{
    ViewBag.Title = "Inbox";
}

<h2>Inbox</h2>

<section class="content inbox mt-5">
    <div class="row clearfix">
        <div class="col-md-12 col-lg-12 col-xl-12">
            <ul class="mail_list list-group list-unstyled">
                @foreach (var msg in Model)
                { 
                        <li class="list-group-item unread">
                            <a class="linkChat" href="@Url.Action("Index", "Chat", new { Id = msg.ChatID })">
                                <div class="media">
                                    <div class="pull-left">
                                        <div class="controls">
                                            <div class="checkbox">
                                                <i class="fa fa-envelope" aria-hidden="true"></i>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="media-body">
                                        <div class="media-heading">
                                            <div class="m-r-10" style="display: inline-block">@msg.SenderName</div>
                                            <small class="float-right text-muted"><time class="hidden-sm-down">@msg.Date_Msg</time></small>
                                        </div>
                                        <p class="msg">@msg.Msg</p>
                                    </div>
                                </div>
                            </a>
                  </li>
                }
            </ul>
        </div>
    </div>
</section>

@section Styles {
    <link href="@Url.Content("~/Content/ChatStyleSheet.css")" rel="stylesheet" type="text/css" />
}