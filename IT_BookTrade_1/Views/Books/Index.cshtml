@model IEnumerable<IT_BookTrade_1.Models.Book>

@{
    ViewBag.Title = "Index";
}

<div class="container my-2">
    <!--BESTSELLERS-->
    <h3>Bestsellers</h3>
    <hr />
    <div id="bestsellers" class="row my-3">
        @foreach (var book in Model)
        {
            <div class="col-lg-2 col-md-4 mb-4 d-flex align-items-stretch">
                <div class="card h-100">
                    <div class="card add-pointer" onclick="location = 'Books/Details/@book.ID'">
                        <img class="card-img-top card-img" src="@book.ImageURL" alt="">
                        <div class="card-body h-100">
                            <div class="card-title">
                            @if (@book.Name.Length > 17)
                            {
                                <div class="card-Title">@book.Name.Substring(0, 14)</div>
                                <div class="card-Title">@book.Name.Substring(14)</div>
                            }
                            else
                            {
                                <div class="card-Title">@book.Name</div>
                                <br>
                            }
                            </div>
                            <div class="card-text">@book.BookAuthor</div>
                            <div>
                                @for (int i = 0; i < book.Rating; ++i)
                                {
                                    <img class="card-star" src="~/Content/Images/star.png" alt="">
                                }
                            </div>
                            <div class="card-text">Tradeable: @(book.Tradeable ? "Yes" : "No")</div>
                            <div class="card-text card-price">$@book.Price</div>
                        </div>
                    </div>
                    <div class="card-footer">
                        @if ((ViewBag.BookIDs as List<int>).Contains(book.ID))
                        {
                            <div class="btn btn-danger remove-pointer">Already in cart</div>
                        }
                        else
                        {
                            @Html.ActionLink("Add to Cart", "AddToCart", new { id = book.ID }, new { @class = "btn btn-success" })
                        }
                    </div>
                </div>
            </div>
        }
    </div>
    <!--BESTSELLERS-->
</div>