@model IT_BookTrade_1.Models.Book

@{
    ViewBag.Title = "Details";
}

<div>
    <h4>Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            <div>
                @Html.DisplayFor(model => model.Name)
            </div>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.BookAuthor)
        </dt>

        <dd>
            <div>
                @Html.DisplayFor(model => model.BookAuthor)
            </div>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.BookDescription)
        </dt>

        <dd>
            <div>
                @Html.DisplayFor(model => model.BookDescription)
            </div>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            <div>
                @Html.DisplayFor(model => model.Description)
            </div>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ImageURL)
        </dt>

        <dd>
            <div>
                <img src="@Model.ImageURL" />
            </div>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Rating)
        </dt>

        <dd>
            <div>
                @for (int i = 0; i < Model.Rating; ++i)
                {
                    <img class="card-star" src="~/Content/Images/star.png" alt="">
                }
            </div>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>

        <dd>
            <div class="card-text card-price">
                $@Html.DisplayFor(model => model.Price)
            </div>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Tradeable)
        </dt>

        <dd>
            <div>
                @(Model.Tradeable ? "Yes" : "No")
            </div>
        </dd>

    </dl>
</div>
<div>
    @Html.ActionLink("Back", "Index", new { }, new { @class = "btn btn-outline-secondary" })
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }, new { @class = "btn btn-outline-secondary" })
    @Html.ActionLink("Add to Cart", "Index", new { }, new { @class = "btn btn-success" })
</div>
